<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity31AdmPenalidades">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#D9D9D9"
        android:padding="14dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_voltar_activity31_adm_penalidades"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:cornerRadius="12dp"
            android:backgroundTint="#9c9292"
            android:text="Voltar"
            android:textColor="#000000"
            android:textSize="22sp"
            app:icon="@drawable/ic_arrow_back"
            app:iconSize="30dp"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:iconTint="#000000"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_aplicar_activity31_adm_penalidades"
        android:layout_width="201dp"
        android:layout_height="77dp"
        android:backgroundTint="#2A2828"
        android:text="Aplicar"
        android:textColor="#BDBDBD"
        android:textSize="20sp"
        app:cornerRadius="12dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="160dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_remover_activity31_adm_penalidades"
        android:layout_width="201dp"
        android:layout_height="77dp"
        android:backgroundTint="#2A2828"
        android:text="Remover"
        android:textColor="#BDBDBD"
        android:textSize="20sp"
        app:cornerRadius="12dp"/>


</LinearLayout>


</LinearLayout>