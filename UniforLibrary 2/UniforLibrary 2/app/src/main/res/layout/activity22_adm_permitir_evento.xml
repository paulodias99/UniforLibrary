<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity22AdmPermitirEvento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#D9D9D9"
        android:padding="14dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_voltar_activity22_adm_permitir_evento"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:cornerRadius="12dp"
            android:backgroundTint="#9c9292"
            android:text="Voltar"
            android:textColor="#000000"
            android:textSize="22sp"
            app:icon="@drawable/ic_arrow_back"
            app:iconSize="30dp"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:iconTint="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="70dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Evento:"
            android:textSize="22dp"
            android:layout_marginBottom="8dp"/>
        <!-- Campo de texto com borda -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxBackgroundColor="#d9d9d9"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#BDBDBD"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eT_nomeEvento_activity22_adm_permitir_evento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:text="Evento 1"
                android:enabled="false"
                android:inputType="text"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:textSize="22dp"
            android:layout_marginBottom="8dp"/>
        <!-- Campo de texto com borda -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxBackgroundColor="#d9d9d9"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#BDBDBD"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eT_data_activity22_adm_permitir_evento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:text="25/09/2025"
                android:enabled="false"
                android:inputType="text"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario"
            android:textSize="22sp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxBackgroundColor="#d9d9d9"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#BDBDBD"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eT_horario_activity22_adm_permitir_evento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:text="AB"
                android:enabled="false"
                android:inputType="text"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sala:"
            android:textSize="22sp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxBackgroundColor="#d9d9d9"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#BDBDBD"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eT_sala_activity22_adm_permitir_evento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:text="Sala 1"
                android:enabled="false"
                android:inputType="text"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E" />
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição do Evento:"
            android:textSize="22dp"
            android:paddingTop="10dp"/>
        <!-- Campo de texto com borda -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#d9d9d9"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#BDBDBD"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eT_descricao_activity22_adm_permitir_evento"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:text="Descrição evento 1"
                android:inputType="textMultiLine|text"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_permitir_activity22_adm_permitir_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#05EF4D"
        android:text="Permitir"
        android:textColor="#BFB8B8"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:strokeWidth="2dp"/>

    <Space
        android:layout_width="15dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_recursar_activity22_adm_permitir_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DC0606"
        android:text="Recusar"
        android:textColor="#BDBDBD"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:strokeWidth="2dp"/>


</LinearLayout>


    </LinearLayout>



</LinearLayout>