<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activity01Login"
    tools:deviceIds="tv"
    tools:ignore="MergeRootFrame">


    <!-- Imagem no topo -->

    <!-- Card com campos de login -->
    <ImageView
        android:id="@+id/imgView_card_activity01_login"
        android:layout_width="177dp"
        android:layout_height="195dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="40dp"
        android:contentDescription="Imagem superior"
        android:src="@drawable/logo_unifor"
        android:scaleX="2"
        android:scaleY="2"
        android:paddingBottom="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="200dp"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:backgroundTint="#FFFFFF"
        tools:ignore="MissingClass">

        <!-- LinearLayout interno com padding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_border"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Label Matrícula -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Matrícula"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- Campo matrícula -->
            <EditText
                android:id="@+id/eT_matricula_activity01_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="Digite matrícula aqui"
                android:inputType="text"
                android:paddingHorizontal="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888" />

            <!-- Label Senha -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:text="Senha"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- Campo senha -->
            <EditText
                android:id="@+id/eT_senha_activity01_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="Digite a senha aqui"
                android:inputType="textPassword"
                android:paddingHorizontal="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888" />

            <!-- Botão ENTRAR -->
            <Button
                android:id="@+id/btn_entrar_activity01_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#000000"
                android:radius="8dp"
                android:text="ENTRAR"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_esqueceu_activity01_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Esqueceu sua senha?"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/textView_cadastro_activity01_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cadastra-se"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:clickable="true"/>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
