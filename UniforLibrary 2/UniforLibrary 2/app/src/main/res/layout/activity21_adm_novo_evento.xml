<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity21AdmNovoEvento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#D9D9D9"
        android:padding="14dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_voltar_activity21_adm_novo_evento"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:cornerRadius="12dp"
            android:backgroundTint="#9c9292"
            android:text="Voltar"
            android:textColor="#000000"
            android:textSize="22sp"
            app:icon="@drawable/ic_arrow_back"
            app:iconSize="30dp"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:iconTint="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="74dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Evento:"
            android:textSize="22dp" />
        <!-- Campo de texto com borda -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#BDBDBD"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eT_nomeEvento_activity21_adm_novo_evento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="Digite aqui"
                android:inputType="text"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:textSize="22dp" />
        <!-- Campo de texto com borda -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#BDBDBD"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eT_data_activity21_adm_novo_evento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="DD/MM/AA"
                android:inputType="text"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario:"
            android:textSize="22dp" />

        <Spinner
            android:id="@+id/spinner_horario_activity21_adm_novo_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/spinner_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sala:"
            android:textSize="22dp" />

        <Spinner
            android:id="@+id/spinner_sala_activity21_adm_novo_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/spinner_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição do Evento"
            android:textSize="22dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#BDBDBD"
            app:counterEnabled="true"
            app:counterMaxLength="200"
            app:hintEnabled="false">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eT_descricao_activity21_adm_novo_evento"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@null"
                android:hint="Digite a descrição com o \n maximo de detalhes"
                android:inputType="textCapSentences"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_criar_activity21_adm_novo_evento"
            android:layout_width="201dp"
            android:layout_height="77dp"
            android:backgroundTint="#2A2828"
            android:text="Criar"
            android:textColor="#BDBDBD"
            android:textSize="20sp"
            app:cornerRadius="12dp"/>


    </LinearLayout>

</LinearLayout>