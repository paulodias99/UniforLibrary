<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity28_adm_avisos.xml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity28AdmAvisos">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#D9D9D9"
        android:orientation="horizontal"
        android:padding="14dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_voltar_activity28_adm_avisos"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:backgroundTint="#9c9292"
            android:text="Voltar"
            android:textColor="#000000"
            android:textSize="22sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_arrow_back"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="30dp"
            app:iconTint="#000000" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_historico_activity28_adm_avisos"
        android:layout_width="201dp"
        android:layout_height="77dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="105dp"
        android:backgroundTint="#2A2828"
        android:text="Histórico"
        android:textColor="#BDBDBD"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_mensagem_activity28_adm_avisos"
        android:layout_width="201dp"
        android:layout_height="77dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="105dp"
        android:backgroundTint="#2A2828"
        android:text="Mensagem"
        android:textColor="#BDBDBD"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_historico_activity28_adm_avisos"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/layout_historico"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <TextView
            android:text= "Tela Histórico"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Layout da tela de Mensagem -->
    <LinearLayout
        android:id="@+id/layout_mensagem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <TextView
            android:text= "Tela Mensagem"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>